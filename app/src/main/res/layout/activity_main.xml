<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".activities.MainActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#272727"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/layoutProfile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="?actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
                <ImageView
                    android:id="@+id/profileImg"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/grey_color"/>
                <TextView
                    android:id="@+id/profileTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"
                    style="@style/text_gray_9"
                    android:gravity="center"
                    android:layout_marginTop="7dp"/>
            </LinearLayout>
            <View
                android:id="@+id/lineProfile"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:visibility="invisible"
                android:background="@drawable/red_line"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutGood"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="?actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
                <ImageView
                    android:id="@+id/goodImg"
                    android:layout_width="19dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_doing_good"
                    app:tint="@color/grey_color"/>
                <TextView
                    android:id="@+id/goodTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/doing_good"
                    style="@style/text_gray_9"
                    android:gravity="center"
                    android:layout_marginTop="7dp"/>
            </LinearLayout>
            <View
                android:id="@+id/lineGood"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:visibility="invisible"
                android:background="@drawable/red_line"/>


        </LinearLayout>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:src="@drawable/crop"
            android:elevation="11dp"/>
        <LinearLayout
            android:id="@+id/layoutMyPrezi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="?actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
                <ImageView
                    android:id="@+id/myPreziImg"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_prezi"
                    app:tint="@color/grey_color"/>
                <TextView
                    android:id="@+id/myPreziTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/my_prezi"
                    style="@style/text_gray_9"
                    android:gravity="center"
                    android:layout_marginTop="7dp"/>
            </LinearLayout>
            <View
                android:id="@+id/lineMyPrezi"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:visibility="invisible"
                android:background="@drawable/red_line"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutFeed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="?actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
                <ImageView
                    android:id="@+id/feedImg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_feed"
                    app:tint="@color/grey_color"/>
                <TextView
                    android:id="@+id/feedTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/feed"
                    style="@style/text_gray_9"
                    android:gravity="center"
                    android:layout_marginTop="7dp"/>
            </LinearLayout>
            <View
                android:id="@+id/lineFeed"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:visibility="invisible"
                android:background="@drawable/red_line"/>


        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/mainBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/bottom_bar_fab"
        android:background="?actionBarItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="11dp"
        android:layout_marginBottom="45dp" />
</androidx.constraintlayout.widget.ConstraintLayout>